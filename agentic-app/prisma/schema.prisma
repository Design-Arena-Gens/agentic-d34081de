// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Channel {
  id                   String         @id @default(cuid())
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  name                 String
  niche                String
  youtubeChannelId     String         @unique
  youtubeRefreshToken  String
  youtubeAccessToken   String?
  youtubeTokenExpiry   DateTime?
  postingTimezone      String         @default("UTC")
  defaultVideoSettings Json?
  tasks                VideoTask[]
  videos               GeneratedVideo[]
}

enum VideoTaskStatus {
  PENDING
  IN_PROGRESS
  FAILED
  COMPLETED
  SCHEDULED
}

model VideoTask {
  id              String           @id @default(cuid())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  channel         Channel          @relation(fields: [channelId], references: [id])
  channelId       String
  topic           String
  niche           String
  scheduledFor    DateTime?
  batchGroup      String?
  status          VideoTaskStatus  @default(PENDING)
  failureReason   String?
  scriptPlan      Json?
  assetPlan       Json?
  aiMetadata      Json?
  result          GeneratedVideo?
  agentRuns       AgentRun[]
}

model GeneratedVideo {
  id             String             @id @default(cuid())
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  task           VideoTask          @relation(fields: [taskId], references: [id])
  taskId         String             @unique
  channel        Channel            @relation(fields: [channelId], references: [id])
  channelId      String
  youtubeVideoId String?
  title          String
  description    String
  tags           Json?
  script         Json
  stockAssets    Json?
  captionsSrt    String?
  videoFilePath  String?
  audioFilePath  String?
  thumbnailPath  String?
  postedAt       DateTime?
  analytics      AnalyticsSnapshot[]
}

model AgentRun {
  id         String       @id @default(cuid())
  createdAt  DateTime     @default(now())
  task       VideoTask    @relation(fields: [taskId], references: [id])
  taskId     String
  status     String
  step       String?
  logs       Json?
  durationMs Int?
}

model AnalyticsSnapshot {
  id             String          @id @default(cuid())
  createdAt      DateTime        @default(now())
  video          GeneratedVideo  @relation(fields: [videoId], references: [id])
  videoId        String
  views          Int             @default(0)
  likes          Int             @default(0)
  comments       Int             @default(0)
  shares         Int             @default(0)
  watchTimeSec   Float           @default(0)
  engagementRate Float           @default(0)
  recordedAt     DateTime        @default(now())
  rawPayload     Json?
}
